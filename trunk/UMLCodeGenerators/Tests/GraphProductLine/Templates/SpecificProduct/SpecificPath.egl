operation specificPath (packages: Set, basePackage: Package): Set{
	var pack:Set;
	pack.add(basePackage);
	for (package in packages){
		// If the current element is the one created specifically by the user
		if(package[0]==basePackage){
			// For each of the packages which requires
			for (pa in package[1]){
				// Find the packages which said packages uses recursively
				var path=specificPath(packages,pa);
				for (elem in path){
					pack.add(elem);
				}//for-el
			}//for-e
		}//if-element
	}//for-element
	return pack;
}
%]